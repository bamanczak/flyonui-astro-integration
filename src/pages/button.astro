---
import Layout from "../layouts/Layout.astro";
import Button from '../components/Button.astro';
---

<Layout title="Button">
  <div>
    <h1 class="text-xl font-medium mb-4">Solid Buttons</h1>
    <div class="flex flex-wrap gap-2">
      <Button class="btn-primary" content="Primary" />
      <Button class="btn-info" content="Info" />
      <Button class="btn-success" content="Success" />
      <Button class="btn-warning" content="Warning" />
      <Button class="btn-error" content="Error" />
    </div>

    <h1 class="text-xl font-medium mb-4 mt-6">Soft Buttons</h1>
    <div class="flex flex-wrap gap-2">
      <Button class="btn-soft btn-primary" content="Primary" />
      <Button class="btn-soft btn-info" content="Info" />
      <Button class="btn-soft btn-success" content="Success" />
      <Button class="btn-soft btn-warning" content="Warning" />
      <Button class="btn-soft btn-error" content="Error" />
    </div>
    <h1 class="text-xl font-medium mb-4 mt-6">Outline Buttons</h1>
    <div class="flex flex-wrap gap-2">
      <Button class="btn-outline btn-primary" content="Primary" />
      <Button class="btn-outline btn-info" content="Info" />
      <Button class="btn-outline btn-success" content="Success" />
      <Button class="btn-outline btn-warning" content="Warning" />
      <Button class="btn-outline btn-error" content="Error" />
    </div>
    <h1 class="text-xl font-medium mb-4 mt-6">Text Buttons</h1>
    <div class="flex flex-wrap gap-2">
      <Button class="btn-text btn-primary" content="Primary" />
      <Button class="btn-text btn-info" content="Info" />
      <Button class="btn-text btn-success" content="Success" />
      <Button class="btn-text btn-warning" content="Warning" />
      <Button class="btn-text btn-error" content="Error" />
    </div>
    <h1 class="text-xl font-medium mb-4 mt-6">Gradient Buttons</h1>
    <div class="flex flex-wrap gap-2">
      <Button class="btn-gradient btn-primary" content="Primary" />
      <Button class="btn-gradient btn-info" content="Info" />
      <Button class="btn-gradient btn-success" content="Success" />
      <Button class="btn-gradient btn-warning" content="Warning" />
      <Button class="btn-gradient btn-error" content="Error" />
    </div>
  </div>
</Layout>